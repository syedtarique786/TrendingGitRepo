<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/colorPrimary"
    android:paddingStart="@dimen/default_margin_short"
    android:paddingEnd="@dimen/default_margin_short">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_txt_margin"
        android:layout_marginTop="@dimen/toolbar_txt_margin"
        android:layout_marginBottom="@dimen/toolbar_txt_margin"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/toolbar_txt"
        android:textSize="@dimen/txt_toolbar_title"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgv_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgv_menu"
        android:layout_width="@dimen/toolbar_menu_width"
        android:layout_height="@dimen/toolbar_height"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_black_fill"
        />
</androidx.constraintlayout.widget.ConstraintLayout>