<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/card_corner_radius"
    app:cardCornerRadius="@dimen/card_corner_radius"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_short"
        android:layout_marginBottom="@dimen/default_margin_short"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_menu_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:text="@string/menu_stars"
            android:textColor="@color/tv_txt_grey_item"
            android:textSize="@dimen/txt_normal" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:text="@string/menu_name"
            android:textColor="@color/tv_txt_grey_item"
            android:textSize="@dimen/txt_normal" />
    </LinearLayout>
</androidx.cardview.widget.CardView>